.user-profile__banner {
	height: 486rpx;
	width: 100%;
	box-sizing: border-box;
	position: relative;
	z-index: 1;
}

.user-profile__user-bg {
	position: absolute;
	width: 100%;
	height: 422rpx;
	left: 0;
	top: 0;
	z-index: 2;
}

.user-profile__user-bg-photo {
	width: 100%;
	height: 100%;
}

.user-profile__mask {
	height: 100%;
	width: 100%;
	position: absolute;
	z-index: 3;
	left: 0;
	bottom: 0;
	background: linear-gradient(0deg, rgba(77,84,91,1) 11%, rgba(77,84,91,1) 19%, rgba(77,84,91,0.9038209033613446) 26%, rgba(77,84,91,0) 59%);
}

.user-profile__info {
	position: absolute;
	width: 100%;
	height: 206rpx;
	bottom: 32rpx;
	padding-left: 268rpx;
	z-index: 4;
	box-sizing: border-box;
}

.user-profile__photo {
	width: 206rpx;
	height: 206rpx;
	position: absolute;
	left: 30rpx;
	border: 5rpx solid #fff;
	border-radius: 50%;
	box-sizing: border-box;
	overflow: hidden;
}

.user-profile__photo-img {
	width: 100%;
	height: 100%;
}

.user-profile__name-info {
	padding-top: 62rpx;
}

.user-profile__name {
	font-size: 42rpx;
	color: #fff;
}

.user-profile__number {
	padding-top: 20rpx;
}

.user-profile__number-text {
	color: #a4a7aa;
	font-size: 20rpx;
}

.user-profile__return-btn {
	width: 64rpx;
	height: 64rpx;
	background-color: rgba(0, 0, 0, .4);
	position: relative;
	border-radius: 50%;
	overflow: hidden;
	top: 112rpx;
	left: 32rpx;
	z-index: 4;
}

.user-profile__return-btn::after {
	content: '';
	position: absolute;
	background-image: url(data:image/png;base64,);
	background-position: center center;
	background-size: auto 32rpx;
	background-repeat: no-repeat;
	width: 100%;
	height: 100%;
	left: 0;
	top: 0;
}

.user-profile__body {
	height: 200rpx;
	width: 100%;
	background-color: #fff;
	border-top-left-radius: 13rpx;
	border-top-right-radius: 13rpx;
	margin-top: -10rpx;
	position: relative;
	z-index: 2;
}

.user-profile__user-data {
	padding: 36rpx 32rpx 44rpx 32rpx;
	display: flex;
	flex-direction: row;
}

.user-profile__user-data-item {
	display: inline-flex;
	flex-direction: row;
	align-items: center;
	padding-right: 36rpx;
}

.user-profile__user-data-number {
	font-size: 32rpx;
	color: #161822;
	padding-right: 10rpx;
	font-weight: bold;
}

.user-profile__user-data-type {
	font-size: 32rpx;
	color: #73747a;
}

.user-profile__video-list {
	display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-gap: 3rpx;
}

.user-profile__video {
	background-color: #eff0f2;
	height: 329rpx;
}


